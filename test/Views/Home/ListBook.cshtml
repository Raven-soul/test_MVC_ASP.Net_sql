<div class="row-2">
    <div class="col db-container">
        <ul>
            @{
                foreach (var book in Model.allBooks) {
                    <li>
                        <a href="https://localhost:44336/Home/EditBook/@book.id" class="db-item" book-id="@book.id">
                            <div class="col db-item-data">
                                <span>@book.id  @book.bookName</span>
                            </div>
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="col">
        <div class="row buttons-row">
            <div class="col-auto">
                <a href="https://localhost:44336/Form/AddBook/" class="submit-button a-button">
                    Добавить книгу
                </a>
            </div>
        </div>
    </div>
</div>

